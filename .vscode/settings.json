{
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.format": true
  },
  "files.exclude": {
    ".husky": true,
    ".github": true,
    "*.d.ts": true,
    "*.md": true,
    ".npmrc": true,
    ".gitignore": true,
    ".prettierignore": true,
    "package-lock.json": true,
    "node_modules/": true,
    ".eslintrc.json": true,
    "tsconfig.json": true,
    "tslint.json": true,
    "server.js": true
  }
}
